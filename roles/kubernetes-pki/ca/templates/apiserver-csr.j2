{
  "CN": "apiserver",
  "key": {
    "algo": "rsa",
    "size": 2048
  },
  "hosts": [
    "{{ kubernetes.masterApiUrl.split('//')[1].split(':')[0] }}",
    "{{ kubernetes.serviceIpApi }}",
    "kubernetes",
    "kubernetes.default",
    "kubernetes.default.svc",
    "kubernetes.default.svc.cluster.local",
    "127.0.0.1",
    "localhost"
  ],
  "names": [
    {
      "C": "{{ pki_country }}",
      "L": "{{ pki_locality }}",
      "O": "{{ pki_organisation }}",
      "OU": "{{ pki_organisational_unit }}",
      "ST": "{{ pki_state }}"
    }
  ]
}
